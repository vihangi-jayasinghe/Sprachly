<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_articles_gradient"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Articles"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1B1B1B"
            android:gravity="center"
            android:paddingTop="50dp"
            android:paddingBottom="25dp" />

        <!-- Intro -->
        <TextView
            android:id="@+id/tvIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In German, nouns have gender. They are:"
            android:textSize="16sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Big card with Der / Die / Das -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvArticlesList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Der\nDie\nDas"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#6200EE"
                    android:lineSpacingExtra="6dp"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Explanation card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:id="@+id/tvExplanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:text="â€¢ Der is used for masculine nouns\n\nâ€¢ Die is used for feminine nouns\n\nâ€¢ Das is used for neutral nouns"
                    android:textColor="#222222"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Examples card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="20dp">

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvExamplesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Examples"
                android:textColor="#6200EE"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Example list (uses simple bullets + emoji for visual interest) -->
            <TextView
                android:id="@+id/tvExamples"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp"
                android:text="â€¢ ðŸ¶  Der Hund\nâ€¢ ðŸ±  Die Katze\nâ€¢ ðŸš—  Das Auto"
                android:textColor="#222222"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="16dp"
            android:text="@string/grammar2_txt8" />
    </LinearLayout>
</ScrollView>
